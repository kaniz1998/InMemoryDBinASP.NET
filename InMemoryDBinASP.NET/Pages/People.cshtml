@page
@using InMemoryDBinASP.NET.Models
@model InMemoryDBinASP.NET.Pages.PeopleModel
@{
    <h1 class="display-5 text-center text-decoration-underline">People</h1>

    <form method="post">
        <div class="row">
            <div class="col">
                <div class="row mb-2">
                    <label class="col-2">ID : </label>
                    <div class="col-10">
                        <input type="number" name="id" placeholder="ID" class="form-control" />
                    </div>
                </div>

                <div class="row mb-2">
                    <label class="col-form-label col-2">Name : </label>
                    <div class="col-10">
                        <input type="text" name="name" placeholder="Name" class="form-control" />
                    </div>
                    
                </div>

                <div class="row mb-2">
                    <label class="col-form-label col-2">Age : </label>
                    <div class="col-10">
                        <input type="number" name="age" placeholder="Age" class="form-control" />
                    </div>
                    
                </div>
            </div>
        </div>
        
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>


    <div class="row mt-5">
        <div class="col">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Age</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Person person in Model.People)
                    {
                        <tr>
                            <td>@person.ID</td>

                            <td>@person.Name</td>

                            <td>@person.Age</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
